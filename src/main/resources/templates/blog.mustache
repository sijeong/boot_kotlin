{{> header}}
<h1>{{title}}</h1>
<div class="articles">
    {{#banner.title}}

    {{/banner.title}}
    {{#articles}}
        <section>
            <header class="article-header">
                <h2 class="article-title"><a href="/article/{{slug}}">{{title}}</a> {{slug}}</h2>
                <div class="article-meta">By <strong>{{author.firstname}}, on <strong>{{addedAt}}</strong></strong></div>
            </header>
            <div class="article-description">
                {{headline}}
            </div>
        </section>
    {{/articles}}
</div>
{{> footer}}